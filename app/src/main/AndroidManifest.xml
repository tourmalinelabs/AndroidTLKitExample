<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.tourmaline.example.ExampleApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tourmaline.example.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tourmaline.example.activities.MonitoringPermissionsActivity"
            android:label="@string/title_activity_monitoring_permissions" >
        </activity>

        <activity
            android:name="com.tourmaline.example.activities.TripsActivity"
            android:label="@string/title_activity_trips" >
        </activity>

        <activity
            android:name="com.tourmaline.example.activities.LocationsActivity"
            android:label="@string/title_activity_locations" >
        </activity>

        <activity
            android:name="com.tourmaline.example.activities.TelematicsActivity"
            android:label="@string/title_activity_telematics" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
