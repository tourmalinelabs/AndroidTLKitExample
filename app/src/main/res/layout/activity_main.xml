<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.tourmaline.example.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/ck_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/context_engine" />

            <Button
                android:id="@+id/start_button_automatic"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:textSize="12sp"
                android:text="@string/start_automatic_monitoring" />

            <Button
                android:id="@+id/start_button_manual"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:textSize="12sp"
                android:text="@string/start_manual_monitoring" />

            <Button
                android:id="@+id/stop_button"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:textSize="12sp"
                android:text="@string/stop_monitoring" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="@string/tlkit_state" />

                <TextView
                    android:id="@+id/engine_State"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/api_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="20dip"
                android:background="@android:color/black"
                android:minHeight="0.5dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="16dip"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/monitoring_apis" />

            <Button
                android:id="@+id/locations_button"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:textSize="12sp"
                android:text="@string/locations" />

            <Button
                android:id="@+id/drives_button"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:textSize="12sp"
                android:text="@string/drives" />

            <Button
                android:id="@+id/telematics_button"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:textSize="12sp"
                android:text="@string/telematics" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/alert_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="20dip"
                android:background="@android:color/black"
                android:minHeight="0.5dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Device"/>

            <TextView
                android:id="@+id/alert_gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="GPS: Enable"/>

            <TextView
                android:id="@+id/alert_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Location permission: Granted"/>

            <TextView
                android:id="@+id/alert_motion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Motion permission: Granted"/>

            <TextView
                android:id="@+id/alert_power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Power saving mode: Disable"/>

            <TextView
                android:id="@+id/alert_sdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="SDK up to date: Yes"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
