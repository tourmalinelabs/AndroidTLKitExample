<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tourmaline.example.activities.MainActivity">

    <LinearLayout
        android:id="@+id/ck_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/context_engine" />

        <Button
            android:id="@+id/start_button_automatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_automatic_monitoring" />

        <Button
            android:id="@+id/start_button_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_manual_monitoring" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_monitoring" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/tlkit_state" />

            <TextView
                android:id="@+id/engine_State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="20dip"
        android:background="@android:color/black"
        android:minHeight="0.5dip" />

    <LinearLayout
        android:id="@+id/api_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:layout_marginBottom="20dip"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/monitoring_apis" />

        <Button
            android:id="@+id/locations_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/locations" />

        <Button
            android:id="@+id/drives_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drives" />

        <Button
            android:id="@+id/telematics_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telematics" />


    </LinearLayout>

</LinearLayout>
